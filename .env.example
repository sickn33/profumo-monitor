# Database
DATABASE_URL=sqlite:///profumi_prices.db

# Notifiche Telegram (opzionale ma consigliato)
# Ottieni il token da @BotFather su Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Notifiche Email (opzionale)
EMAIL_ENABLED=False
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_TO=recipient@example.com

# Soglie per le notifiche (valori decimali, es. 0.15 = 15%)
PRICE_DROP_THRESHOLD=0.15
COMPETITOR_PRICE_DIFF=0.20
MIN_PRICE_FOR_MONITORING=10.0

# Scheduler - frequenza di controllo in ore
CHECK_INTERVAL_HOURS=6

# Delay tra le richieste (secondi)
REQUEST_DELAY=2.0
